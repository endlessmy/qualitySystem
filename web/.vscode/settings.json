{
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "files.trimTrailingWhitespace": true,
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "vue",
            "autoFix": true
        },
        "html",
        "vue"
    ],
    "eslint.options": {
        "plugins": ["vue"]
    },
    "editor.rulers": [130],
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "prettier.printWidth": 130,
    // Files excluded from counting.
    // "**/WebContent/resources/suport/**",
    // "**/WebContent/resources/workorder/**",
    // "**/WebContent/resources/permission/**",
    // "**/WebContent/resources/outsource/**",
    // "**/WebContent/resources/budgetApply/**",
    "line-counter.excludes": [
        "**/.vscode/**",
        "**/WebContent/static/**",
        "**/WebContent/resources/node_modules/**",
        "**/WebContent/resources/mock-server/**",
        "**/WebContent/resources/common/vendors/**",
        "**/WebContent/resources/common/vendors/**",
        "**/WebContent/resources/home/src/containers/login/dependencies/**",
        "**/WebContent/resources/document/src/vendors/**"
    ]
}
